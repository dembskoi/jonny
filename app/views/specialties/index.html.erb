<h1>Listing Specialties</h1>

<table class='table table-hover'>
  <tr>
    <th>Specialty Name</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @specialties.each do |specialty| %>
  <tr>
    <td><%= specialty.name %></td>
    <td><%= link_to 'Show', specialty %></td>
    <td><%= link_to 'Edit', edit_specialty_path(specialty) %></td>
    <td><%= link_to 'Destroy', specialty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @specialties, renderer: BootstrapPagination::Rails %>

<%= link_to 'New Specialty', new_specialty_path %>

            </li>
          </ul>
        </div>
        <!-- End Social Menu -->

      </div>
      <!--/.row-fluid -->
    </div>
    <!--/.container -->
  </header>
  <!-- End Header -->

  <!-- Section top -->
  <section id="top">
    <div class="container">
      <!-- Main Menu -->
      <div class="navbar">
        <div class="navbar-inner">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            Main Menu
          </a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><%= link_to 'Главная', root_path %></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="">
                  Врачи
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Аллерголог', "#" %></li>

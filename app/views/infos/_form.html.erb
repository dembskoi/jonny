<%= simple_form_for(@info, :html => {:class => 'form-horizontal' }) do |f| %>
  <div><%= f.error_notification %></div>

  <div class='form-inputs'>
    <%= f.text_area :phone_number, rows: 10 %>
    <%= f.text_area :location, rows: 10 %>
  </div>

  <div class='form-actions'>
    <%= f.submit %>
  </div>
<% end %>
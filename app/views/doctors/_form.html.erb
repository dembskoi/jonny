<%= simple_form_for(@doctor, :html => {:class => 'form-horizontal' }) do |f| %>
  <div><%= f.error_notification %></div>

  <div class='form-inputs'>
    <%= f.input :name %>
    <%= f.input :status %>
    <%= f.input :phone %>
    <%= f.association :specialty, label_method: :name, value_method: :id, include_blank: false %>
  </div>

  <div class='form-actions'>
    <%= f.submit %>
  </div>

<% end %>
